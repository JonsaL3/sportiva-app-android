<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="es.dao.sportiva.ui.MainViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        tools:openDrawer="start"
        android:background="@color/black"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_container_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.appbar.MaterialToolbar
                            android:id="@+id/topAppBar"
                            style="@style/Widget.MaterialComponents.Toolbar.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@color/black"
                            tools:title="Pues aqui va el titulo de lo que estás haciendo"
                            android:elevation="0dp"
                            />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/pi_main_activity"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:indeterminate="true"
                            tools:visibility="visible"
                            android:visibility="visible"
                            app:indicatorColor="@color/red_sportiva"
                            app:trackColor="@color/black"
                            android:layout_gravity="bottom"
                            />

                    </FrameLayout>

                </com.google.android.material.appbar.AppBarLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/nav_host_fragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/main_nav_graph" />

            </LinearLayout>

            <LinearLayout
                tools:visibility="visible"
                android:visibility="visible"
                android:padding="10dp"
                android:orientation="vertical"
                android:id="@+id/ll_comprobando_versiones"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="SE ESTÁN COMPROBANDO SI HAY NUEVAS VERSIONES, ESPERA UN MOMENTO..."
                    android:layout_marginBottom="50dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="LO SE ESTE CUADRADO ROJO ES FEO DE PELOTAS PERO ES TEMPORAL."
                    />


                <com.airbnb.lottie.LottieAnimationView
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lottie_rawRes="@raw/loading_lottie_new_version"
                    />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="ES OBLIGATIORIO ACTUALIZAR SI NO ESTA COSA NO SE TE VA A QUITAR"
                    />

            </LinearLayout>

        </FrameLayout>

        <!-- AQUI COMIENZA EL DRAWER -->
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:clickable="true"
            android:orientation="horizontal"
            tools:visibility="gone"
            android:layout_gravity="start">

            <LinearLayout
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/fl_no_hay_foto"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_height="70dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/default_circle_shape"
                            android:layout_height="match_parent"
                            />

                        <TextView
                            android:id="@+id/tvInicial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            tools:text="D" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_nombre_usuario"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            tools:text="David Loazno Neira"
                            android:textColor="@color/white"
                            />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/colorPrimary"
                            android:layout_marginVertical="10dp"
                            />

                        <TextView
                            android:id="@+id/tv_descripcion_usuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            tools:text="Entrenador de PEPOTE S.L. Ingenieria en patear balones de furbo."
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    app:dividerColor="@color/colorPrimary"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!-- Esto es para que se vea el efecto al clickear -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_mostrar_qr_drawer"
                        android:visibility="gone"
                        android:backgroundTint="@color/transparent"
                        android:background="@color/transparent"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="0dp"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/mostrar_c_digo_qr"
                            android:textColor="@color/white"
                            />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Esto es para que se vea el efecto al clickear -->
                    <com.google.android.material.card.MaterialCardView
                        android:backgroundTint="@color/transparent"
                        android:background="@color/transparent"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/configuraci_n"
                            android:textColor="@color/white"
                            />

                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="@color/colorPrimary"
                        />

                    <!-- Esto es para que se vea el efecto al clickear -->
                    <com.google.android.material.card.MaterialCardView
                        android:backgroundTint="@color/transparent"
                        android:background="@color/transparent"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/salir"
                            android:textColor="@color/white"
                            />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:dividerColor="@color/colorPrimary"
                />


        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <import type="android.view.View" />

            <variable
                name="sesion"
                type="es.dao.sportiva.models.sesion.Sesion" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sesion"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:padding="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1H de aerobic en ICP"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="@{sesion.titulo}"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Una leve sesiÃ³n fitness con los del departamento de marketing."
                    android:textColor="@color/textos"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:text="@{sesion.subtitulo}"
                    />

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/example_image"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>